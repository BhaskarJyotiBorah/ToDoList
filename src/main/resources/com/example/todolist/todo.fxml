<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.todolist.TodoController">  <!-- Replace with your actual package -->

    <TextField fx:id="taskInput" promptText="Enter task"/>
    <Button text="Add Task" onAction="#handleAddTask"/>
    <Button text="Clear All" onAction="#deleteAll"/>
    <ListView fx:id="taskList"/>
</VBox>

